<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="500.0" prefWidth="800.0" style="-fx-background-color: #1a0000;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="clientPackage.SignUpController">
   <children>
      <AnchorPane layoutX="235.0" layoutY="110.0" prefHeight="370.0" prefWidth="343.0" style="-fx-background-color: #B22222;">
         <children>
            <TextField fx:id="SignUpName" layoutX="66.0" layoutY="53.0" promptText="User Name">
               <font>
                  <Font name="System Bold Italic" size="16.0" />
               </font>
            </TextField>
            <TextField fx:id="SignUpMail" layoutX="66.0" layoutY="115.0" promptText="E_Mail">
               <font>
                  <Font name="System Bold Italic" size="16.0" />
               </font>
            </TextField>
            <PasswordField fx:id="SignUpPassword" layoutX="66.0" layoutY="175.0" promptText="Password">
               <font>
                  <Font name="System Bold Italic" size="16.0" />
               </font>
            </PasswordField>
            <Button fx:id="SignUpBtn" layoutX="121.0" layoutY="240.0" mnemonicParsing="false" onAction="#GoToGameModes" style="-fx-background-color: #FFA500;" text="Sign Up">
               <font>
                  <Font name="System Bold Italic" size="20.0" />
               </font>
            </Button>
            <Button fx:id="GoBackLoginBtn" layoutX="95.0" layoutY="312.0" mnemonicParsing="false" onAction="#GoBackLogin" style="-fx-background-color: #00bfff;" text="Go Back Login!">
               <font>
                  <Font name="System Bold Italic" size="20.0" />
               </font>
            </Button>
         </children>
      </AnchorPane>
      <Label layoutX="302.0" layoutY="40.0" text="Tic Tac Toe" textFill="#d7a3a3">
         <font>
            <Font name="System Bold Italic" size="40.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
